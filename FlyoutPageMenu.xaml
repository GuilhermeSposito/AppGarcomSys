<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGarcomSys.FlyoutPageMenu"
             Title="FlyoutPageMenu"
             xmlns:pages="clr-namespace:AppGarcomSys.Views"
            BackgroundColor="#F3F3F3"
            FlyoutLayoutBehavior="Popover"
            >

    <FlyoutPage.Flyout>
        <pages:Menu />
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages:Carrinho />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>